{
  "name": "@triage/config",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "outDir": "dist",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint:check": "eslint \"src/**/*.{js,ts}\" --max-warnings 99",
