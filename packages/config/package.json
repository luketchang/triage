    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.20.0",
    "eslint-plugin-import": "^2.31.0",
    "tsx": "^4.15.0",
    "typescript": "5.7.3"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts"
