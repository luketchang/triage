{
  "name": "triage",
  "private": true,
  "scripts": {
    "dev": "concurrently \"turbo dev --filter=!triage-desktop\" \"pnpm -C apps/desktop dev\"",
    "dev:packages": "turbo dev",
    "build": "pnpm clean && turbo build",
    "clean": "turbo clean && pnpm clean:tsbuildinfo",
    "clean:tsbuildinfo": "find . -name \"tsconfig.tsbuildinfo\" -delete",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "turbo lint --filter=...[origin/main]"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "^20"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
