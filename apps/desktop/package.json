{
  "name": "triage-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "pnpm run compile && vite & (wait-on http://localhost:5174 && cross-env electron dist-electron/electron/main.js)",
    "compile": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "build": "pnpm lint:check && vite build",
    "package": "pnpm run build && electron-builder",
    "lint:check": "eslint src --ext ts,tsx --max-warnings 99",
    "lint:fix": "eslint src --ext ts,tsx --fix --max-warnings 99",
    "check-types": "tsc --noEmit",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@triage/agent": "workspace:*",
    "@triage/common": "workspace:*",
    "@triage/config": "workspace:*",
    "@triage/observability": "workspace:*",
    "better-sqlite3": "^11.9.1",
    "dotenv": "^16.4.7",
    "electron-updater": "^6.6.2",
    "kysely": "^0.28.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^9.0.1",
    "react-split-pane": "^0.1.92"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "electron": "^35.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prebuild-install": "^7.1.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  }
}
